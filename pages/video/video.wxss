/* pages/video/video.wxss */
/* 搜索区域,头部 */
.header{
  display: flex;
  margin: 20rpx;
}

.header image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.header .search{
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  color: #d43c33;
}

/* 导航区域 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 70rpx;
}

.navScroll .navItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navItem .active{
  border-bottom: 1rpx solid #d43c33;
}


/* 视频区域 */
.videoScroll{
  height: calc(100vh - 176rpx);
}

.videoItem{
  display: flex;
  flex-direction: column;
  padding: 0 3%;
}

.videoHeader image{
  width: 60rpx;
  height: 60rpx;
  margin-right:20rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.videoHeader text{
  font-size: 26rpx;
  vertical-align: middle;
}

.videoContent .common{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.videoFooter{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.videoFooter .videoTitle{
  width: 60%;
}

.videoFooter .videoTitle text{
  font-size: 26rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.videoInfo .right-icon{
  margin-left: 50rpx;
  font-size: 28rpx;
  position: relative;
}

.right-icon .right-text{
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}