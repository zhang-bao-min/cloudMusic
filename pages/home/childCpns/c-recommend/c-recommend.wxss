/* pages/home/childCpns/c-recommend/c-recommend.wxss */
.recommendContainer{
  margin: 0 20rpx;
}

.recommendContainer .content{
  display: flex;
  height: 280rpx;
}

.recommendContainer .content-item{
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendContainer .content-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendContainer .content-item text{
  font-size: 26rpx;

  /* 单行文本溢出隐藏省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  /* 使用webkit盒模型 */
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient: vertical;
  /* 设置行数 */
  -webkit-line-clamp: 2;
}


