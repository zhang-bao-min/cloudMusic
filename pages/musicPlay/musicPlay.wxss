/* pages/musicPlay/musicPlay.wxss */
.musicPlay{
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.author{
  margin: 20rpx 0;
}

/* 摇杆底座 */
.circle{
  position: relative;
  z-index: 9;

  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
}

/* 摇杆 */
.needle{
  position: relative;
  left: 60rpx;
  top: -40rpx;
  z-index: 8;

  width: 192rpx;
  height: 274rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}

.needleRotate{
  transform: rotate(0);
}

/* 磁盘 */
.discContainer{
  position: relative;
  top: -170rpx;

  width: 598rpx;
  height: 598rpx;
}

.discAnimation{
  animation: disc 5s linear infinite;
  animation-delay: 600ms;
}

@keyframes disc{
  from{}
  to{
    transform: rotate(360deg);
  }
}

.discContainer .disc{
  width: 100%;
  height: 100%;
}

.discContainer .musicImg{
  position: absolute;
  right: 0;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;

  width: 360rpx;
  height: 360rpx;
  border-radius: 50%;
}

/* 底部区域 */
.musicControl{
  display: flex;
  justify-items: center;

  position: absolute;
  bottom: 40rpx;

  width: 100%;
  border-top: 1rpx solid #fff;
}

.musicControl .iconfont{
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 60rpx;
}

.musicControl .big{
  font-size: 70rpx;
}