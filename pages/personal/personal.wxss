/* pages/personal/personal.wxss */
.personal{
  width: 100%;
  height: 100%;
}

.personal .user-section{
  height: 520rpx;
  position: relative;
  padding: 100rpx 30rpx 0;
}

.user-section .bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  fill: blur(1px);
}

.user-info-box{
  height: 180rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.user-info-box .portrait{
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.user-info-box .username{
  font-size: 24rpx;
  color: #303133;
  margin-left: 20rpx;
}

.vip-card-box{
  position: relative;
  display: flex;
  flex-direction: column;
  background: linear-gradient(left, red, black);
  background: rgba(0, 0, 0, .7);
  height: 240rpx;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
}

.vip-card-box .card-bg{
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx; 
}

.vip-card-box .b-btn{
  position: absolute;
  right: 20rpx;
  top: 16rpx;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36343c;
  border-radius: 20rpx;
  background: #f9e6af;
  z-index: 1;
}

.vip-card-box .tit{
  font-size: 22rpx;
  color: f7d680;
  margin-bottom: 28rpx;
}

.vip-card-box .tit .iconfont{
  color: #f6e5a3;
  margin-right: 16rpx;
}

.vip-card-box .e-m{
  font-size: 34rpx;
  margin-top: 10rpx;
}

.vip-card-box .e-b{
  font-size: 24rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}


.coverContainer{
  margin-top: -150rpx;
  padding: 0 30rpx 20rpx 30rpx;
  position: relative;
  background: #f5f5f5;
}

.coverContainer .arc{
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}

.coverContainer .nav-section{
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}

.coverContainer .nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  box-sizing: border-box;
}

.coverContainer .nav-item .iconfont{
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}

.coverContainer .nav-item text:last-child{
  font-size: 22rpx;
}

.personalContent{
  background: #fff;
  margin-top: 20rpx;
}

.recentPlayContainer .title{
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}

.recentPlayContainer .recentScroll{
  display: flex;
  height: 280rpx;
}

.recentScroll .recentItem{
  width: 200rpx;
  margin-left: 20rpx;
}

.recentItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recentItem text{
  font-size: 26rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.no-play{
  margin-left: 20rpx;
}

.cardList{
  margin-top: 20rpx;
}

.cardItem{
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.cardItem .more{
  margin-right: 10rpx;
}

