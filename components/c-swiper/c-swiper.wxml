<!--components/c-swiper/c-swiper.wxml-->

<swiper class="swiper"
        indicator-dots 
        autoplay 
        circular 
        interval="3000"
        indicator-active-color="#ff5777">
  <block wx:for="{{banners}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.pic}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
